pipeline {
    // add your slave label name
    agent { label 'maven-slave'}
    tools{
        maven 'maven'
    }
    stages {
        stage ('Checkout_SCM') {

            steps {
          	    
	     checkout scm
            }
        }

        stage ('Maven_Build') {

            steps {
               sh 'mvn clean package'
            }
        }
        
        stage ('Deploy_Tomcat') {

            steps {
	     sshagent(['jenkins-tomcat']) {
              sh "scp -o StrictHostKeyChecking=no  target/maven-web-application.war  ec2-user@15.206.88.238:/opt/tomcat9/webapps"
	      }
         }
        }
        
    }
}
